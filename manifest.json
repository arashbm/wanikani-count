{
	"name": "Memrise Button",
	"version": "0.12",
	"manifest_version": 2,
	"description": "An unofficial memrise extension to help you take care of your plants",
	"options_page": "options.html",
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"background": {
		"page": "main.html"
	},
	"browser_action": {
		"default_icon": "icons/icon.png"
	},
	"permissions": [
		"http://www.memrise.com/",
		"background"
	],
	"content_scripts": [ {
		"js": [ "lib/jquery-1.7.2.min.js" ],
		"matches": [ "file:///*/*" ],
		"run_at" : "document_end"
	}, {
		"matches": [ "http://www.memrise.com/*" ],
		"js": [ "page.js" ]
	} ]
}
